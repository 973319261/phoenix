<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_border_bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_work_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_work_taskName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tv_work_left_bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp"/>
                <com.robinhood.ticker.TickerView
                    android:id="@+id/tv_work_progressNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tv_work_taskTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp"/>
            </LinearLayout>

            <com.robinhood.ticker.TickerView
                android:id="@+id/tv_work_rewardState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text=""/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_work_rewardNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/tv_work_rewardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/colorBlack"
            android:textSize="10dp"/>
    </LinearLayout>
