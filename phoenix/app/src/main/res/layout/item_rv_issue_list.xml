<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/colorWhite"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_prize_img"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_issue_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/btn_border_radius"
                android:text="可参与"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_prize_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="奖品名称"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_issue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="期号：20200608-01"
            android:textSize="14dp"/>
        <!--进度条-->
        <ProgressBar
            android:id="@+id/pb_issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/progressBarMini">
        </ProgressBar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_yet_bet_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已参与 1751"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_all_bet_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余8249"
                android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>