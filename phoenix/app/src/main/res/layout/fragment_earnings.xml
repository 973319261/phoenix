<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_earnings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--头部-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="35dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_earnings_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:text="第一阶段"/>
                        <TextView
                            android:id="@+id/tv_earnings_explain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"
                            android:text="收益说明"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp">
                        <com.robinhood.ticker.TickerView
                            android:id="@+id/tv_earnings_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:text="0元"/>
                    </LinearLayout>
                </LinearLayout>
                <!--内容-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <!--总收益-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:background="@drawable/bg_border_bottom"
                        android:orientation="vertical">
                        <!--收益分类-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!--累计总收益-->
                            <LinearLayout
                                android:id="@+id/ll_earnings_all_query"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/tv_earnings_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:text="0.00元"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textSize="10dp"
                                        android:textColor="@color/colorBlack"
                                        android:text="累计总收益 "/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:gravity="center"
                                        android:src="@drawable/ic_earnings_query"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/colorGrayTint" />
                            <!--徒弟贡献收益-->
                            <LinearLayout
                                android:id="@+id/ll_earnings_tudi_query"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/tv_earnings_tudi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:text="0.00元"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textSize="10dp"
                                        android:text="徒弟贡献收益 "/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:gravity="center"
                                        android:src="@drawable/ic_earnings_query"/>
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:background="@color/colorGrayTint" />
                            <!--徒孙贡献收益-->
                            <LinearLayout
                                android:id="@+id/ll_earnings_tusun_query"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/tv_earnings_tusun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:text="0.00元"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textSize="10dp"
                                        android:text="徒孙贡献收益 "/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:gravity="center"
                                        android:src="@drawable/ic_earnings_query"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!--进度-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <!--进度条-->
                            <ProgressBar
                                android:id="@+id/pb_earnings_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/progressBarMini"
                                android:progress="0"
                                android:max="100000">
                            </ProgressBar>
                            <!--进度百分比-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">
                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/tv_earnings_income"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10dp"
                                    android:text="已解锁0.00元，进度0.00%,"/>
                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/tv_earnings_income_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="10dp"
                                    android:text="×1.0加速"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--预估收益-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/bg_border_bottom"
                        android:orientation="vertical">
                        <!--今天估计收益-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/ll_earnings_today_query"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="10dp"
                                        android:text="今日预估收益"/>
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_earnings_query"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_earnings_toggle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_earnings_toggle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="10dp"
                                        android:text="展开"/>
                                    <ImageView
                                        android:id="@+id/iv_earnings_toggle"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_earnings_down"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <!--今天总收益-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <com.robinhood.ticker.TickerView
                                        android:id="@+id/tv_earnings_all_today"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:text="0.00元"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <com.robinhood.ticker.TickerView
                                            android:id="@+id/tv_earnings_today_all"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:textSize="10dp"
                                            android:textColor="@color/colorBlack"
                                            android:text="今天总收益(1.0倍加速)"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrayTint" />
                                <!--徒弟为您贡献-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <com.robinhood.ticker.TickerView
                                        android:id="@+id/tv_earnings_tudi_today"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:text="0.00元"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:textSize="10dp"
                                            android:text="徒弟为您贡献"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrayTint" />
                                <!--徒孙为您贡献-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <com.robinhood.ticker.TickerView
                                        android:id="@+id/tv_earnings_tusun_today"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:text="0.00元"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:textSize="10dp"
                                            android:text="徒孙为您贡献"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!--昨天预估收益-->
                        <LinearLayout
                            android:id="@+id/ll_earnings_yesterday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <LinearLayout
                                android:id="@+id/ll_earnings_yesterday_query"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10dp"
                                    android:text="昨天预估收益"/>
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_earnings_query"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <!--昨天总收益-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <com.robinhood.ticker.TickerView
                                        android:id="@+id/tv_earnings_all_yesterday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:text="0.00元"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <com.robinhood.ticker.TickerView
                                            android:id="@+id/tv_earnings_yesterday_all"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:textSize="10dp"
                                            android:textColor="@color/colorBlack"
                                            android:text="昨天总收益(1.0倍加速)"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrayTint" />
                                <!--徒弟为您贡献-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <com.robinhood.ticker.TickerView
                                        android:id="@+id/tv_earnings_tudi_yesterday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:text="0.00元"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:textSize="10dp"
                                            android:text="徒弟为您贡献"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrayTint" />
                                <!--徒孙为您贡献-->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                    <com.robinhood.ticker.TickerView
                                        android:id="@+id/tv_earnings_tusun_yesterday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:text="0.00元"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:textSize="10dp"
                                            android:text="徒孙为您贡献"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--必得分红-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <!--图片-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@mipmap/ic_launcher"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--必得分红百分比-->
                                <com.robinhood.ticker.TickerView
                                    android:id="@+id/tv_earnings_fenhong"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:text="必得分红：0.000%"/>
                                <TextView
                                    android:id="@+id/tv_earnings_fenhong_compound"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:visibility="gone"
                                    android:text="合成"/>
                            </LinearLayout>
                            <!--进度条-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom">
                                <ProgressBar
                                    android:id="@+id/pb_earnings_fenhong"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/progressBarMini"
                                    android:progress="0"
                                    android:max="100000">
                                </ProgressBar>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textSize="10dp"
                                android:gravity="bottom"
                                android:text="助力进度100%合成37级必得分红"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--必得分红进度分类-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/bg_border_bottom"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.robinhood.ticker.TickerView
                                android:id="@+id/tv_earnings_progress_tudi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:text="0.000%"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:text="徒弟助力"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <com.robinhood.ticker.TickerView
                                android:id="@+id/tv_earnings_progress_tusun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:text="0.000%"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:text="徒孙助力"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <com.robinhood.ticker.TickerView
                                android:id="@+id/tv_earnings_progress_other"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:text="0.000%"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:text="其他助力"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--按钮-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/ll_earnings_team"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:gravity="center"
                                android:background="@drawable/btn_border_radius"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
